enum Role {
    ADMIN
    USER
}

model User {
    id              Int       @id @default(autoincrement())
    name            String
    email           String    @unique
    password        String
    resetKey        String?
    resetKeyExpired DateTime? @unique
    createdAt       DateTime  @default(now())
    updatedAt       DateTime  @updatedAt
    role            Role      @default(USER)

    @@map("users")
}
